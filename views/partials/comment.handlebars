<div class="comment-container">

    <h3>Comments</h3>

    <div class="new-comment-box">
        <div class="flex-col mb">
            <input type="hidden" name="parentcomment" id="parentcomment" value="">
            <label for="txtNewComment">Leave your comment:</label>
            <input type="text" name="commentText" id="txtNewComment" required>
        </div>
        <div class="flex-row justify-sb align-center">
            <button id="new-comment-submit">Submit</button>
        </div>
    </div>



    {{#if commentlist}}
    <br>

    <div class="flex-row justify-sb align-center">
        <button id="hide-show-comment">Hide Comments</button>
    </div>
    <br>
    <div class="comments-list" id="comments-list">

        {{#each commentlist}}
        <div class="comments-level-0">

            <div class="comment-body" userID="{{userID}}" commentID="{{commentID}}">
                <div class="user-avatar">
                    <img class="commentAvatarIcon" src="/images/Avatars/Avatars Set Flat Style-{{avatarImage}}.png">
                </div>
                <div class="comment-title">
                    <h5> {{username}} says..</h5>
                </div>
                <div class="comment-datetime text-muted">
                    <h6>Date: {{commentDate}}</h6>
                </div>

                <div class="comment-content">
                    <p>{{commentText}} </p>
                </div>

                <div class="vote-container">
                    <img src="/images/upvote.png" class="vote-icon" voteType="Upvote">
                    <span class="upvote-count">0</span>
                    &emsp;
                    <img src="/images/downvote.png" class="vote-icon" voteType="Downvote">
                    <span class="downvote-count">0</span>
                </div>

                <div class="commentreply-delete">
                    <button class="comment-reply">Reply</button>
                    <p id="commentreply"></p>
                    <button class="comment-delete">Delete</button>
                    <p id="commentdelete"></p>
                </div>
            </div>
            <div class="child-comment">

                {{#each children}}

                <div class="comments-level-1">

                    <div class="comment-body" userID="{{userID}}" commentID="{{commentID}}">
                        <div class="user-avatar">
                            <img class="commentAvatarIcon"
                                src="/images/Avatars/Avatars Set Flat Style-{{avatarImage}}.png">
                        </div>
                        <div class="comment-title">
                            <h5> {{username}} says..</h5>
                        </div>
                        <div class="comment-datetime text-muted">
                            <h6>Date: {{commentDate}}</h6>
                        </div>

                        <div class="comment-content">
                            <p>{{commentText}} </p>
                        </div>
                        <div class="vote-container">
                            <img src="/images/upvote.png" class="vote-icon" voteType="Upvote">
                            <span class="upvote-count">0</span>
                            &emsp;
                            <img src="/images/downvote.png" class="vote-icon" voteType="Downvote">
                            <span class="downvote-count">0</span>
                        </div>

                        <div class="commentreply-delete">
                            <button class="comment-reply">Reply</button>
                            <p id="commentreply"></p>
                            <button class="comment-delete">Delete</button>
                            <p id="commentdelete"></p>
                        </div>
                    </div>
                    <div class="child-comment">


                        {{#each children}}

                        <div class="comments-level-2">

                            <div class="comment-body" userID="{{userID}}" commentID="{{commentID}}">
                                <div class="user-avatar">
                                    <img class="commentAvatarIcon"
                                        src="/images/Avatars/Avatars Set Flat Style-{{avatarImage}}.png">
                                </div>
                                <div class="comment-title">
                                    <h5> {{username}} says..</h5>
                                </div>
                                <div class="comment-datetime text-muted">
                                    <h6>Date: {{commentDate}}</h6>
                                </div>

                                <div class="comment-content">
                                    <p>{{commentText}} </p>
                                </div>
                                <div class="vote-container">
                                    <img src="/images/upvote.png" class="vote-icon" voteType="Upvote">
                                    <span class="upvote-count">0</span>
                                    &emsp;
                                    <img src="/images/downvote.png" class="vote-icon" voteType="Downvote">
                                    <span class="downvote-count">0</span>
                                </div>

                                <div class="commentreply-delete">
                                    <button class="comment-reply">Reply</button>
                                    <p id="commentreply"></p>
                                    <button class="comment-delete">Delete</button>
                                    <p id="commentdelete"></p>
                                </div>
                            </div>
                            <div class="child-comment"></div>
                        </div>
                        {{/each}}

                    </div>

                    
                </div>
                {{/each}}
            </div>



           
        </div>
            {{/each}}

    </div> 
    {{/if}}
</div>