{{> default-navi-bar }}
<div class="message">
    {{#if message}}
    <p>{{message}}</p>
    {{/if}}
</div>
<div class="container">
    <div class="login-card">
    
    <div class="yeti-animation"></div>

        


        <h2>Login</h2>
        <form action="./login" method="POST">
            <div class="flex-col mb">
                <label for="txtUsername">Username:</label>
                <input type="text" name="username" id="txtUsername" required>
            </div>

            <div class="flex-col mb">
                <label for="txtPassword">Password:</label>
                <input type="password" name="password" id="txtPassword" required>
            </div>

            

            <div class="flex-row justify-sb align-center">
                <button type="submit">Log in</button>
            </div>
        </form>


        <form action="./newAccount" method="GET">
            <div class="flex-row justify-sb align-center">
                <button type="submit">Create New Account</button>
            </div>
        </form>

    </div>

</div>