{{> user-navi-bar }}

<div class="container">
    <div class="AvatarDiv">
        <img src="/images/Avatars/{{user.avatarImage}}}.png" class="avatarIcon">
    </div>
    <h1>Hello, {{user.username}}!</h1>


    <h2>Update your information:</h2>

<form action="./updateUserName" method="POST">
        <div class="flex-col mb">
            <label for="txtUsername">Username:</label>
            <input type="text" name="username" id="txtUsername" required>
        </div>

        <div class="flex-row justify-sb align-center">
            <button type="submit">Update your username!</button>
        </div>
</form>

<form action="./updateUserPassword" method="POST">
        <div class="flex-col mb">
            <label for="txtUsername">Password:</label>
            <input type="password" name="password" id="txtPassword" required>
        </div>

        <div class="flex-row justify-sb align-center">
            <button type="submit">Update your password!</button>
        </div>
</form>

<form action="./updateFirstName" method="POST">
        <div class="flex-col mb">
            <label for="txtFName">First name:</label>
            <input type="text" name="fname" id="txtFName" required>
        </div>

        <div class="flex-row justify-sb align-center">
            <button type="submit">Update your first name!</button>
        </div>
</form>

<form action="./updatelastName" method="POST">
        <div class="flex-col mb">
            <label for="txtLName">Last name:</label>
            <input type="text" name="lname" id="txtLName" required>
        </div>

        <div class="flex-row justify-sb align-center">
            <button type="submit">Update your last name!</button>
        </div>
</form>

<form action="./updateBirthday" method="POST">
        <div>
            <label for="txtdob">Birthday:</label>
            <input type="date"  name="birthday" id="txtdob" required>
        </div>

        <div class="flex-row justify-sb align-center">
            <button type="submit">Update your birthday!</button>
        </div>
</form>

<form action="./updateAvatar" method="POST">
